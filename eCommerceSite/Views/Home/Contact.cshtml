<section class="Material-contact-section section-padding section-dark">
    <img src="../images/contact-us.jpg" alt="Contact Us Image" width="100%" />
    <div class="container mt-4">
        <div class="row">
            <!-- Section Title -->
            <div class="col-md-12 animate__animated animate__fadeInLeft" data-wow-delay=".2s">
                <p class="navbar-brand mb-2">Love to Hear From You</p>
            </div>
        </div>
        <div class="row">
            <!-- Section Titile -->
            <div class="col-md-5 mt-3 contact-widget-section2 animate__animated animate__fadeInLeft" data-wow-delay=".2s">
                <p>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. 
                    The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 
                    'Content here, content here', making it look like readable English.</p>

                <div class="find-widget">
                    GitHub:  <a href="https://github.com/Isaac-Hingtgen">Isaac-Hingtgen</a>
                </div>
                <div class="find-widget">
                    Phone:  <a href="#">+ 920-857-7239</a>
                </div>
                <div class="find-widget">
                    Email:  <a href="mailto:ihingtge@@asu.edu">ihingtge@asu.edu</a>
                </div>
            </div>
            <!-- contact form -->
            <div class="col-md-7 animate__animated animate__fadeInRight" data-wow-delay=".2s">
                <form class="shake" role="form" method="post" id="contactForm" name="contact-form" data-toggle="validator">
                    <!-- Name -->
                    <div class="form-group label-floating">
                        <label class="control-label" for="name">Name</label>
                        <input class="form-control" id="name" type="text" name="name" required data-error="Please enter your name">
                        <div class="help-block with-errors"></div>
                    </div>
                    <!-- email -->
                    <div class="form-group label-floating">
                        <label class="control-label" for="email">Email</label>
                        <input class="form-control" id="email" type="email" name="email" required data-error="Please enter your Email">
                        <div class="help-block with-errors"></div>
                    </div>
                    <!-- Subject -->
                    <div class="form-group label-floating">
                        <label class="control-label">Subject</label>
                        <input class="form-control" id="msg_subject" type="text" name="subject" required data-error="Please enter your message subject">
                        <div class="help-block with-errors"></div>
                    </div>
                    <!-- Message -->
                    <div class="form-group label-floating">
                        <label for="message" class="control-label">Message</label>
                        <textarea class="form-control" rows="3" id="message" name="message" required data-error="Write your message"></textarea>
                        <div class="help-block with-errors"></div>
                    </div>
                    <!-- Form Submit -->
                    <div class="form-submit mt-1">
                        <button class="btn btn-common btn-light" type="submit" id="form-submit">
                            <i class="material-icons mdi mdi-message-outline"></i> 
                            Send Message
                        </button>
                        <div id="msgSubmit" class="h3 text-center hidden"></div>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>